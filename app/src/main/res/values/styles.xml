<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- CheckBoxes and RadioButtons -->
    <style name="TextViews" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:backgroundTint">@color/buttonTint</item>
    </style>

    <style name="CheckBoxes" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:buttonTint">@color/buttonTint</item>
        <item name="android:textSize">@dimen/textSizeH1</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/margin_left</item>
        <item name="android:paddingTop">@dimen/margin_top</item>
    </style>

    <style name="Buttons" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/backgroundTint</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/textSizeH2</item>
        <!-- item name="android:layout_marginTop">16dp</item -->
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <!-- item name="textColorPrimary">#006064</item -->
    </style>

</resources>
